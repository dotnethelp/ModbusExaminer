<UserControl x:Class="ModbusExaminer.Pages.Connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="2">
            <Button x:Name="button" Content="Button" Width="117" Height="45"/>
        </ScrollViewer>
        <Label x:Name="label" Content="Label test" HorizontalAlignment="Left" Margin="0,-15,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
